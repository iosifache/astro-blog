---
import PageLayout from "@/layouts/Base";
import BlogPostPreview from "@/components/BlogPostPreview";
import { sortMDByDate, getAllTagsWithCount } from "@/util";
import type { Post } from "@/types";

const meta = {
	title: "Home",
	description: "Random bits of information",
};

const MAX_POSTS = 10;
const allPosts = await Astro.glob<Post>("./posts/*.mdx");
const allTags = getAllTagsWithCount(allPosts);
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
---

<PageLayout meta={meta}>
	<section aria-label="Blog post list">
		<h1 class="mb-4 text-xl title">Posts</h1>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="[&_q]:w-full flex flex-wrap items-center gap-x-2">
						<BlogPostPreview post={p} as="h2" />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h1 class="mb-4 text-xl title">Tags</h1>
		{
			Object.keys(allTags).map((tag) => (
				<li class="flex items-center gap-x-2">
					<a
						class="cactus-link inline-block"
						href={`/tags/${tag}`}
						title={`View posts with the tag: ${tag}`}
					>
						&#35;{tag}
					</a>
					<span class="inline-block">
						- {allTags[tag]} Post{allTags[tag] > 1 && "s"}
					</span>
				</li>
			))
		}
	</section>
</PageLayout>
